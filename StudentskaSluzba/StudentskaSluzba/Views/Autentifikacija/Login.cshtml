@model StudentskaSluzba.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
    string errormsg = TempData["error_poruka"] as string;
}

<div class="container">
    <div class="d-flex justify-content-center align-items-center w-100">
        <form method="post" asp-action="Login" class="border p-3 w-50">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <h4>Login forma</h4>
                <hr />
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Lozinka</label>
                <input type="password" asp-for="Lozinka" class="form-control" />
                <span asp-validation-for="Lozinka" class="text-danger"></span>
                <br />
                @if (errormsg != null)
                {
                    <div class="alert alert-danger">@errormsg</div>
                }
            </div>


            <div class="form-group">
                <input asp-for="ZapamtiPassword" /> Zapamti lozinku
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary form-control" />
            </div>


            <div class="form-group">
                <label>Nemate korsnički račun? <span class="text-info">Registrujte se klikom na registracija.</span></label>
                <input type="button" value="Registracija" class="btn btn-secondary form-control" />
            </div>


        </form>
    </div>
</div>

