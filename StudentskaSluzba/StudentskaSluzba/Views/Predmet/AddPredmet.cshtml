@model StudentskaSluzba.Models.Predmet
@{
    ViewData["Title"] = "AddPredmet";
}

    <div class="container">

        <div>
            <h4>Dodaj novi predmet</h4>
        </div>

        <br />
        <form method="post" asp-action="AddPredmet" >

            <div class="form-group">
                <label>Naziv</label>
                <input asp-for="Naziv" type="text" class="form-control"/>
            </div>

            <div class="form-group">
                <label>ECTS</label>
                <input asp-for="ETCS" type="text" class="form-control" />
            </div>

            <input type="submit" class="btn btn-success" value="Dodaj predmet" />
            <a asp-controller="Predmet" asp-action="Index" class="btn btn-secondary text-white">Nazad</a>
        </form>
    </div>

